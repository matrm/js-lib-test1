{
	"compilerOptions": {
		"moduleResolution": "NodeNext",
		"target": "ESNext",
		"module": "NodeNext",
		"outDir": "./dist",
		"declaration": true,
		"sourceMap": true,
		"strict": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"./node_modules"
	],
	"typedocOptions": {
		"entryPoints": ["src/index.ts"],
		"out": "docs",
		"disableSources": true
	}
}